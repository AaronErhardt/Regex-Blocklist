{
  "description": "Filter HTTP requests with Regular Expressions",
  "manifest_version": 2,
  "name": "RegEx Blocklist",
  "version": "2.0",

  "applications": {
    "gecko": {
      "id": "regex.blacklist@github.com",
      "strict_min_version": "60.0"
    }
  },

  "icons": {
    "48": "icon.svg",
    "96": "icon.svg"
  },

  "permissions": [
    "webRequest",
    "<all_urls>",
    "storage",
    "webRequestBlocking"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "options_ui": {
    "page": "options.html"
  }
}
